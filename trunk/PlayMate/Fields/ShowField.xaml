    Title="PlayMate.Fields" Height="300" Width="300"
    >
    <Grid>
		<StackPanel Orientation="Vertical">
			<Rectangle Name="Header" Width="300" Height="60"></Rectangle>
			<Label Name="City" HorizontalAlignment="Center">Nazwa Miasta</Label>
			<Image VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Height="150"  Name="Image" />
